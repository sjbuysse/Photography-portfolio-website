<div class="contact">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
            <%= value %>
        </div>
    <% end %>
    <h1>Give us a shout!</h1>
    <div class="contact-form">
    <%= form_for(@contact) do |f| %>
        <%= f.label :name %><br />
        <%= f.text_field :name, required: true %><br />
        <%= f.label :email %><br />
        <%= f.text_field :email, required: true %><br />
        <%= f.label :message %><br />
        <%= f.text_area :message, as: :text, required: true %><br />
        <div class="hidden">
            <%= f.text_field :nickname %>
        </div>
        <br />
        <%= f.submit  'Send message!', class: "button"%>
    <% end %>
    </div>
</div>
