<% flash.each do |key, value| %>
    <div class:"alert alert-<%= key %>">
        <%= value %>
    </div>
<% end %>
<%= form_for(@gallery, html: {multipart: true}) do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br /><br />
    <%= f.label :synopsis %><br />
    <%= f.text_area :synopsis %><br /><br />
    <%= f.label :pictures %><br />
        <ul class="nested-forms">
            <%= f.fields_for :pictures do |builder| %>
                <%= render "picture_fields", p: builder %>
            <% end %>
        </ul>
        <%= link_to "Add another picture", "", class: "duplicate-nested-form button clearfix"%>
        <br />
    <%= f.label :thumb %><br />
    <% if @gallery.thumb.length > 1 %>
        <div>
        <%= image_tag(@gallery.thumb, class: "thumb") %> 
        </div>
    <% end %>
    <%= f.file_field :thumb %><br />
    <%= f.hidden_field :thumb_cache %>
    <%= f.submit "Submit gallery", class: "button"%>
<% end %>

