<%= form_for(@gallery, html: {multipart: true}) do |f| %>
    <%= f.label :title %><br />
    <%= f.text_field :title %><br /><br />
    <%= f.label :synopsis %><br />
    <%= f.text_area :synopsis %><br /><br />
    <%= f.label :pictures %><br />
        <ul>
            <%= f.fields_for :pictures do |builder| %>
                <%= render "picture_fields", p: builder %>
            <% end %>
        </ul>
        <%= link_to "Add another picture", "", class: "duplicate-nested-form"%>
    <%= f.label :thumb %><br />
    <% if @gallery.thumb.length > 1 %>
        <div>
        <%= image_tag(@gallery.thumb, class: "thumb") %> 
        </div>
    <% end %>
    <%= f.file_field :thumb %><br />
    <%= f.hidden_field :thumb_cache %>
    <%= f.submit %>
<% end %>

